                                <tc:TextBlock3D Grid.Row="0" Grid.Column="1" Text=""/>
                                <tc:TextBlock3D Grid.Row="1" Grid.Column="1" Text=""/>

                                <tc:TextBlock3D Grid.Row="0" Grid.Column="2" Text=""/>
                                <tc:TextBlock3D Grid.Row="1" Grid.Column="2" Text=""/>

