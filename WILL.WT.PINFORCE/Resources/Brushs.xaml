<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="xTitleColor" Color="#FF738EAD"/>
    <RadialGradientBrush x:Key="xMainBackColor">
        <GradientStop Color="#FF738EAD" Offset="1"/>
        <GradientStop Color="#FFC3D6EC"/>
    </RadialGradientBrush>
    <LinearGradientBrush x:Key="xLogBackColor" StartPoint="0 0" EndPoint="1 1">
        <GradientStop Color="White" Offset="0"/>
        <GradientStop Color="#FFB4B4B4" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="xEventBtnBackground" Color="#FF394C61"/>
    <SolidColorBrush x:Key="xEventBtnForeground" Color="WhiteSmoke"/>

    <SolidColorBrush x:Key="xValueBtnBackground" Color="LightGray"/>
    <SolidColorBrush x:Key="xValueBtnForeground" Color="Black"/>

    <SolidColorBrush x:Key="xTextTitleBack" Color="#FF738EAD"/>
    <SolidColorBrush x:Key="xTextTitleFont" Color="White"/>

    <SolidColorBrush x:Key="xTextStateBack" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="xTextStateFont" Color="Black"/>

</ResourceDictionary>